<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:padding="6dp">

    <LinearLayout
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center|top"
            android:layout_weight="1"
            android:gravity="start|center|top"
            android:orientation="vertical">

            <com.view.MTextView
                android:id="@+id/skyPortTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uber Go"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:customTypeFace="@string/robotobold"
                />

            <com.view.MTextView
                android:id="@+id/skyPortAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="Affordable"
                android:textColor="@color/black"
                android:textSize="12dp"
                app:customTypeFace="@string/robotolightFont" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginEnd="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end|center"
            android:layout_weight="0.7"
            android:gravity="top|end|center">

            <com.view.MTextView
                android:gravity="end|center"
                android:layout_gravity="end|center"
                android:id="@+id/skyPortKm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27.18 km"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:customTypeFace="@string/robotobold" />

            <com.view.MTextView
                android:visibility="invisible"
                android:gravity="end|center"
                android:layout_gravity="end|center"
                android:id="@+id/skyPortHTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:text="away"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:maxLines="2"
                app:customTypeFace="@string/robotolightFont" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>